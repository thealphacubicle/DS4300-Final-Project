# AWS Credentials (if not using an IAM role on your EC2 instance)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# S3 Bucket Names
# Bucket where raw audio files are uploaded (landing zone)
S3_LANDING_BUCKET=your-landing-zone-bucket
# Bucket where processed audio files or transcription outputs are stored (if separate)
S3_OUTPUT_BUCKET=your-output-bucket

# AWS Transcribe Configuration
# (Only required if you plan to use AWS Transcribe directly via the SDK)
TRANSCRIBE_LANGUAGE_CODE=en-US
TRANSCRIBE_MEDIA_FORMAT=mp3

# AWS Step Functions
# The ARN of the Step Functions state machine that orchestrates your pipeline
STATE_MACHINE_ARN=arn:aws:states:us-east-1:123456789012:stateMachine:YourStateMachineName

# Application Settings
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database configurations
RDS_USER="your-username"
RDS_PASSWORD="your-password"
RDS_HOST="your-db-endpoint"
RDS_PORT="your_port"
RDS_DB="your-db-name"
